{
  "git": {
    "deploymentEnabled": {
      "main": true,
      "staging": true
    }
  },
  "functions": {
    "src/app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "crons": [
    {
      "path": "/api/cron/send-trial-reminders",
      "schedule": "0 9 * * *"
    },
    {
      "path": "/api/cron/send-review-reminders",
      "schedule": "0 10 1 * *"
    },
    {
      "path": "/api/cron/process-google-business-scheduled",
      "schedule": "0 13 * * *"
    },
    {
      "path": "/api/cron/cleanup-google-business-scheduled",
      "schedule": "0 14 15 * *"
    },
    {
      "path": "/api/cron/send-optimizer-emails",
      "schedule": "0 */2 * * *"
    },
    {
      "path": "/api/cron/health-monitor",
      "schedule": "*/30 * * * *"
    },
    {
      "path": "/api/cron/post-monthly-stats",
      "schedule": "0 12 1 * *"
    },
    {
      "path": "/api/cron/calculate-daily-stats",
      "schedule": "0 1 * * *"
    }
  ],
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "installCommand": "npm install",
  "framework": "nextjs",
  "headers": [
    {
      "source": "/_next/static/css/(.*)",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/css"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        }
      ]
    },
    {
      "source": "/_next/static/(.*)\\.js",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/javascript"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        }
      ]
    }
  ]
} 
